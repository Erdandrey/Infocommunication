<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="241,176,0,0" VerticalAlignment="Top" Height="50" Width="378" FontSize="18"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="54" Margin="241,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" FontSize="18" TextChanged="textBox_TextChanged"/>
        <Button x:Name="button" Content="Set Name" HorizontalAlignment="Left" Margin="54,74,0,0" VerticalAlignment="Top" Width="120" Height="54" RenderTransformOrigin="0.361,0.388" Click="button_Click" FontSize="24"/>
        <Button x:Name="button1" Content="Get Name" HorizontalAlignment="Left" Height="50" Margin="54,176,0,0" VerticalAlignment="Top" Width="120" Click="button1_Click" FontSize="24"/>
        <Canvas>
            <Button Canvas.Left="10" Canvas.Top="10" Content="Click Me" Height="23" Name="button3" Width="75" Click="button3_Click" />
            <TextBox Width="170" Canvas.Left="90" Canvas.Top="12" Name="myTextBox" />
        </Canvas>
    </Grid>
</Window>
